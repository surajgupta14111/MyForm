@model UserForm.Models.Persons

@{
    ViewData["Title"] = "Delete Person";
}

<h2>Delete Person</h2>

<h4>Are you sure you want to delete this person?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Profession</dt>
        <dd class="col-sm-10">@Model.Profession</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
